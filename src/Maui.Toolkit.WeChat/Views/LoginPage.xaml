<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Maui.Toolkit.WeChat.Converters"
             xmlns:mctb="clr-namespace:CommunityToolkit.Maui.Behaviors;assembly=CommunityToolkit.Maui"
             x:Class="Maui.Toolkit.WeChat.Views.LoginPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:WebNavigatingEventArgsConverter x:Key="WebNavigatingEventArgsConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ContentPage.Content>
        <WebView     
                Source="{Binding LoginUrl}">
            <WebView.Behaviors>
                <mctb:EventToCommandBehavior 
                        EventName="Navigating"
                        EventArgsConverter="{StaticResource WebNavigatingEventArgsConverter}"
                        Command="{Binding NavigateCommand}" />
            </WebView.Behaviors>
        </WebView>
    </ContentPage.Content>
</ContentPage>